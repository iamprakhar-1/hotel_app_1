<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eceff5"
        tools:context=".order_food">

        <ImageView
            android:id="@+id/of1"
            android:layout_width="696dp"
            android:layout_height="309dp"
            android:src="@drawable/order_food"
            app:layout_constraintBottom_toTopOf="@+id/id1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></ImageView>

        <View
            android:id="@+id/vtop"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/of1">
        </View>


        <ImageView
            android:id="@+id/id1"
            android:layout_width="370dp"
            android:layout_height="216dp"
            android:src="@drawable/bhature"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vtop" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="394dp"
            android:layout_height="71dp"
            android:text="Chole Bhature"
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/id1"
            tools:layout_editor_absoluteX="13dp" />


        <ImageView
            android:id="@+id/id2"
            android:layout_width="370dp"
            android:layout_height="216dp"
            android:src="@drawable/coke"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox1"
            tools:layout_editor_absoluteX="0dp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="394dp"
            android:layout_height="71dp"
            android:text="Coka Cola "
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/id2"
            tools:layout_editor_absoluteX="13dp" />

        <ImageView
            android:id="@+id/id3"
            android:layout_width="370dp"
            android:layout_height="216dp"
            android:src="@drawable/paneer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2"
            tools:layout_editor_absoluteX="0dp" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="394dp"
            android:layout_height="71dp"
            android:text="Shaahi Paneer "
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/id3"
            tools:layout_editor_absoluteX="13dp" />

        <ImageView
            android:id="@+id/id4"
            android:layout_width="370dp"
            android:layout_height="216dp"
            android:src="@drawable/dal1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox3"
            tools:layout_editor_absoluteX="0dp" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="394dp"
            android:layout_height="71dp"
            android:text="Dal Makhani "
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/id4"
            tools:layout_editor_absoluteX="13dp" />

        <ImageView
            android:id="@+id/id5"
            android:layout_width="370dp"
            android:layout_height="216dp"
            android:src="@drawable/naan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox4"
            tools:layout_editor_absoluteX="0dp" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="394dp"
            android:layout_height="71dp"
            android:text="Butter Naan "
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/id5"
            tools:layout_editor_absoluteX="13dp" />

        <View
            android:id="@+id/v1"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox5">
        </View>

        <Button
            android:id="@+id/button"
            android:layout_width="380dp"
            android:layout_height="94dp"
            android:background="#2e3440"
            android:text="Order Food"
            android:textColor="@android:color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v1" />

        <View
            android:id="@+id/v2"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/button">
        </View>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/v2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="20dp"/>

        <View
            android:id="@+id/v3"
            android:layout_width="fill_parent"
            android:layout_height="100dp"

            app:layout_constraintTop_toBottomOf="@+id/tv1">
        </View>





    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>